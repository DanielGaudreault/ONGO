    <script>
        // Global variables
        let peerConnection = null;
        let dataChannel = null;
        let isConnected = false;
        let localConnectionId = '';
        let remoteConnectionId = '';
        let chatHistory = [];
        let userName = 'Anonymous';
        let peerName = 'Stranger';

        // DOM Elements
        const statusIndicator = document.getElementById('statusIndicator');
        const statusText = document.getElementById('statusText');
        const startBtn = document.getElementById('startBtn');
        const disconnectBtn = document.getElementById('disconnectBtn');
        const nextBtn = document.getElementById('nextBtn');
        const sendBtn = document.getElementById('sendBtn');
        const messageInput = document.getElementById('messageInput');
        const chatMessages = document.getElementById('chatMessages');
        const peerInfo = document.getElementById('peerInfo');
        const peerTypeSelect = document.getElementById('peerType');
        const connectionIdInput = document.getElementById('connectionId');
        const userNameInput = document.getElementById('userName');
        const interestsInput = document.getElementById('interests');
        const strangersList = document.getElementById('strangersList');
        const strangersContainer = document.getElementById('strangersContainer');

        // Configuration for WebRTC (using public STUN servers)
        const configuration = {
            iceServers: [
                { urls: 'stun:stun.l.google.com:19302' },
                { urls: 'stun:stun1.l.google.com:19302' },
                { urls: 'stun:stun2.l.google.com:19302' },
                { urls: 'stun:stun3.l.google.com:19302' },
                { urls: 'stun:stun4.l.google.com:19302' }
            ]
        };

        // Event Listeners
        startBtn.addEventListener('click', startConnection);
        disconnectBtn.addEventListener('click', disconnect);
        nextBtn.addEventListener('click', nextStranger);
        sendBtn.addEventListener('click', sendMessage);
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });
        peerTypeSelect.addEventListener('change', toggleConnectionIdInput);
        userNameInput.addEventListener('input', updateUserName);

        // Initialize
        function init() {
            generateLocalId();
            updateStatus('ready', 'Ready to connect');
            loadChatHistory();
        }

        // Generate a unique local ID
        function generateLocalId() {
            localConnectionId = Math.random().toString(36).substring(2, 10).toUpperCase();
            console.log('Your connection ID:', localConnectionId);
        }

        // Update status display
        function updateStatus(status, text) {
            statusIndicator.className = 'status-indicator';
            statusIndicator.classList.add(status);
            statusText.textContent = text;
            
            switch(status) {
                case 'ready':
                    isConnected = false;
                    startBtn.disabled = false;
                    disconnectBtn.disabled = true;
                    nextBtn.disabled = true;
                    messageInput.disabled = true;
                    sendBtn.disabled = true;
                    break;
                case 'searching':
                    isConnected = false;
                    startBtn.disabled = true;
                    disconnectBtn.disabled = false;
                    nextBtn.disabled = true;
                    messageInput.disabled = true;
                    sendBtn.disabled = true;
                    break;
                case 'connected':
                    isConnected = true;
                    startBtn.disabled = true;
                    disconnectBtn.disabled = false;
                    nextBtn.disabled = false;
                    messageInput.disabled = false;
                    sendBtn.disabled = false;
                    messageInput.focus();
                    break;
                case 'disconnected':
                    isConnected = false;
                    startBtn.disabled = false;
                    disconnectBtn.disabled = true;
                    nextBtn.disabled = true;
                    messageInput.disabled = true;
                    sendBtn.disabled = true;
                    break;
            }
        }

        // Toggle connection ID input based on peer type
        function toggleConnectionIdInput() {
            const isAnswerer = peerTypeSelect.value === 'answerer';
            connectionIdInput.disabled = !isAnswerer;
            if (!isAnswerer) {
                connectionIdInput.value = '';
            }
        }

        // Update user name
        function updateUserName() {
            userName = userNameInput.value.trim() || 'Anonymous';
        }

        // Start WebRTC connection
        async function startConnection() {
            try {
                updateStatus('searching', 'Setting up connection...');
                
                // Get user preferences
                userName = userNameInput.value.trim() || 'Anonymous';
                const interests = interestsInput.value.trim();
                
                // Create peer connection
                peerConnection = new RTCPeerConnection(configuration);
                
                // Create data channel for chat
                dataChannel = peerConnection.createDataChannel('chat');
                setupDataChannel(dataChannel);
                
                // Set up ICE candidate handling
                peerConnection.onicecandidate = (event) => {
                    if (event.candidate) {
                        console.log('New ICE candidate:', event.candidate);
                    }
                };
                
                peerConnection.onconnectionstatechange = () => {
                    console.log('Connection state:', peerConnection.connectionState);
                    if (peerConnection.connectionState === 'connected') {
                        handleConnected();
                    } else if (peerConnection.connectionState === 'disconnected' || 
                               peerConnection.connectionState === 'failed') {
                        handleDisconnected();
                    }
                };
                
                peerConnection.ondatachannel = (event) => {
                    console.log('Data channel received');
                    setupDataChannel(event.channel);
                };
                
                // Handle remote track (for potential video/audio)
                peerConnection.ontrack = (event) => {
                    console.log('Remote track received:', event.track.kind);
                };
                
                // Create and set local description
                const offer = await peerConnection.createOffer();
                await peerConnection.setLocalDescription(offer);
                
                // Simulate finding a peer (in real app, this would be via a signaling server)
                if (peerTypeSelect.value === 'offerer') {
                    simulateOffererMode();
                } else {
                    simulateAnswererMode();
                }
                
            } catch (error) {
                console.error('Error starting connection:', error);
                updateStatus('disconnected', 'Connection failed');
                addSystemMessage('Failed to establish connection. Please try again.');
            }
        }

        // Simulate offerer mode (demo)
        function simulateOffererMode() {
            updateStatus('searching', 'Looking for strangers...');
            
            // In a real app, you would connect to a signaling server here
            // For demo, we'll simulate a connection after a delay
            setTimeout(() => {
                addSystemMessage('No real signaling server available. This is a demo.');
                addSystemMessage('To test with a friend:');
                addSystemMessage(`1. Share your ID: ${localConnectionId}`);
                addSystemMessage('2. Have them choose "Answerer" and enter your ID');
                addSystemMessage('3. Both click "Start Chatting"');
                
                // Simulate finding a peer
                simulateFoundPeer();
            }, 2000);
        }

        // Simulate answerer mode (demo)
        function simulateAnswererMode() {
            const targetId = connectionIdInput.value.trim();
            
            if (!targetId) {
                addSystemMessage('Please enter a connection ID to join');
                updateStatus('ready', 'Ready to connect');
                return;
            }
            
            updateStatus('searching', `Connecting to ${targetId}...`);
            
            // Simulate connection attempt
            setTimeout(() => {
                if (Math.random() > 0.3) { // 70% success rate for demo
                    simulateFoundPeer(targetId);
                } else {
                    addSystemMessage(`Could not connect to ${targetId}. They might be offline.`);
                    updateStatus('ready', 'Ready to connect');
                }
            }, 2000);
        }

        // Simulate finding a peer (demo function)
        function simulateFoundPeer(targetId = null) {
            remoteConnectionId = targetId || generateRandomId();
            peerName = `Stranger${Math.floor(Math.random() * 1000)}`;
            
            updateStatus('connected', `Connected to ${peerName}`);
            peerInfo.innerHTML = `<i class="fas fa-user-secret"></i> Chatting with ${peerName} (${remoteConnectionId})`;
            
            // Add welcome messages
            addSystemMessage(`Connected to ${peerName}!`);
            addSystemMessage('This is a demo. In a real app, messages would be encrypted and peer-to-peer.');
            
            // Simulate receiving a greeting
            setTimeout(() => {
                addReceivedMessage(`Hi! I'm interested in ${getRandomInterest()}.`);
            }, 1000);
        }

        // Set up data channel
        function setupDataChannel(channel) {
            dataChannel = channel;
            
            channel.onopen = () => {
                console.log('Data channel opened');
                updateStatus('connected', 'Chat connected');
                
                // Send user info
                sendData({
                    type: 'user-info',
                    name: userName,
                    interests: interestsInput.value
                });
            };
            
            channel.onclose = () => {
                console.log('Data channel closed');
                handleDisconnected();
            };
            
            channel.onerror = (error) => {
                console.error('Data channel error:', error);
            };
            
            channel.onmessage = (event) => {
                try {
                    const data = JSON.parse(event.data);
                    handleReceivedData(data);
                } catch (error) {
                    // Handle plain text message
                    addReceivedMessage(event.data);
                }
            };
        }

        // Send data through data channel
        function sendData(data) {
            if (dataChannel && dataChannel.readyState === 'open') {
                dataChannel.send(JSON.stringify(data));
            }
        }

        // Handle received data
        function handleReceivedData(data) {
            switch(data.type) {
                case 'user-info':
                    peerName = data.name || 'Stranger';
                    peerInfo.innerHTML = `<i class="fas fa-user-secret"></i> Chatting with ${peerName}`;
                    break;
                case 'message':
                    addReceivedMessage(data.text, data.timestamp);
                    break;
                case 'typing':
                    // Could implement typing indicator here
                    break;
            }
        }

        // Send message
        function sendMessage() {
            const text = messageInput.value.trim();
            if (!text || !isConnected) return;
            
            // Send through data channel if available
            if (dataChannel && dataChannel.readyState === 'open') {
                sendData({
                    type: 'message',
                    text: text,
                    timestamp: new Date().toISOString()
                });
            }
            
            // Add to chat
            addSentMessage(text);
            
            // Clear input
            messageInput.value = '';
        }

        // Add sent message to chat
        function addSentMessage(text, timestamp = null) {
            const time = timestamp || new Date().toISOString();
            const messageDiv = createMessageElement('sent', text, time);
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
            
            // Save to history
            chatHistory.push({
                type: 'sent',
                text: text,
                timestamp: time
            });
            saveChatHistory();
        }

        // Add received message to chat
        function addReceivedMessage(text, timestamp = null) {
            const time = timestamp || new Date().toISOString();
            const messageDiv = createMessageElement('received', text, time);
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
            
            // Save to history
            chatHistory.push({
                type: 'received',
                text: text,
                timestamp: time
            });
            saveChatHistory();
        }

        // Add system message
        function addSystemMessage(text) {
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message system';
            messageDiv.textContent = text;
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // Create message element
        function createMessageElement(type, text, timestamp) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;
            
            const textDiv = document.createElement('div');
            textDiv.className = 'message-text';
            textDiv.textContent = text;
            messageDiv.appendChild(textDiv);
            
            const timeDiv = document.createElement('div');
            timeDiv.className = 'message-time';
            const time = new Date(timestamp);
            timeDiv.textContent = time.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            messageDiv.appendChild(timeDiv);
            
            return messageDiv;
        }

        // Handle connected state
        function handleConnected() {
            updateStatus('connected', 'Chat connected');
            addSystemMessage('Connection established! You can now chat.');
        }

        // Handle disconnected state
        function handleDisconnected() {
            updateStatus('disconnected', 'Disconnected');
            peerInfo.innerHTML = `<i class="fas fa-user-secret"></i> Waiting for connection...`;
            addSystemMessage('Disconnected from stranger.');
            
            // Clean up
            if (dataChannel) {
                dataChannel.close();
                dataChannel = null;
            }
            
            if (peerConnection) {
                peerConnection.close();
                peerConnection = null;
            }
        }

        // Disconnect from current chat
        function disconnect() {
            handleDisconnected();
        }

        // Move to next stranger
        function nextStranger() {
            disconnect();
            setTimeout(() => {
                addSystemMessage('Looking for a new stranger...');
                startConnection();
            }, 1000);
        }

        // Save chat history to localStorage
        function saveChatHistory() {
            // Keep only last 50 messages to avoid storage issues
            if (chatHistory.length > 50) {
                chatHistory = chatHistory.slice(-50);
            }
            localStorage.setItem('strangerChatHistory', JSON.stringify(chatHistory));
        }

        // Load chat history from localStorage
        function loadChatHistory() {
            try {
                const saved = localStorage.getItem('strangerChatHistory');
                if (saved) {
                    chatHistory = JSON.parse(saved);
                    // Could display previous chat history here
                }
            } catch (error) {
                console.error('Error loading chat history:', error);
            }
        }

        // Helper functions for demo
        function generateRandomId() {
            return Math.random().toString(36).substring(2, 8).toUpperCase();
        }

        function getRandomInterest() {
            const interests = ['music', 'gaming', 'movies', 'sports', 'technology', 'art', 'travel', 'food'];
            return interests[Math.floor(Math.random() * interests.length)];
        }

        // Simulate available strangers (demo)
        function simulateStrangers() {
            strangersList.style.display = 'block';
            strangersContainer.innerHTML = '';
            
            const strangerCount = Math.floor(Math.random() * 5) + 1;
            for (let i = 0; i < strangerCount; i++) {
                const strangerDiv = document.createElement('div');
                strangerDiv.className = 'stranger-item';
                
                const nameDiv = document.createElement('div');
                nameDiv.className = 'stranger-name';
                nameDiv.innerHTML = `
                    <i class="fas fa-user-circle"></i>
                    <span>Stranger${Math.floor(Math.random() * 1000)}</span>
                    <span class="stranger-id">(${generateRandomId()})</span>
                `;
                
                const connectBtn = document.createElement('button');
                connectBtn.className = 'btn btn-success';
                connectBtn.style.width = 'auto';
                connectBtn.style.padding = '5px 10px';
                connectBtn.innerHTML = '<i class="fas fa-plug"></i> Connect';
                connectBtn.onclick = () => {
                    connectionIdInput.value = generateRandomId();
                    peerTypeSelect.value = 'answerer';
                    toggleConnectionIdInput();
                    startBtn.click();
                };
                
                strangerDiv.appendChild(nameDiv);
                strangerDiv.appendChild(connectBtn);
                strangersContainer.appendChild(strangerDiv);
            }
        }

        // Initialize the app
        document.addEventListener('DOMContentLoaded', init);
        
        // Simulate finding some strangers after page loads
        setTimeout(simulateStrangers, 3000);
    </script>
</body>
</html>
